 <script>
      function formatCardNumber() {
          let input = document.getElementById('inputAddress2');
          let value = input.value.replace(/\D/g, ''); // Elimina todos los caracteres que no sean dígitos
      
          // Limita a 16 caracteres
          if (value.length > 16) {
              value = value.slice(0, 16);
          }
      
          // Inserta un espacio cada 4 dígitos
          let formattedValue = ' ';
          for (let i = 0; i < value.length; i++) {
              if (i > 0 && i % 4 === 0) {
                  formattedValue += ' - ';
              }
              formattedValue += value[i];
          }
      
          input.value = formattedValue;
      }

      function formatDate() {
          let input = document.getElementById('inputZip');
          let value = input.value.replace(/\D/g, ''); // Elimina todos los caracteres que no sean dígitos
      
          // Limita a 4 caracteres
          if (value.length > 4) {
              value = value.slice(0, 4);
          }
      
          // Inserta una barra después de 2 dígitos
          let formattedValue = '';
          for (let i = 0; i < value.length; i++) {
              if (i === 2) {
                    formattedValue += '/';
              }
              formattedValue += value[i];
          }
      
          input.value = formattedValue;
      }
      </script>
